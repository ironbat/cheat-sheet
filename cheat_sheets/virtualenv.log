--virtualenv:

--python
virtualenv -p python --system-site-packages name_environment
python virtualenv.py name_environment
--anaconda
virtualenv --python "C:\\Anaconda3\\python.exe" name_environment

--linux
source name_environment/bin/activate
--windows:
source name_environment/Scripts/activate

deactivate



--conda virtual environment:
conda update conda
conda create -n name_environment python=3.6.5 anaconda
conda create --name name_environment --clone existing_name_environment

source activate name_environment
conda install -n name_environment [package]
source deactivate

--list environments
conda info -e
conda remove -n name_environment --all
